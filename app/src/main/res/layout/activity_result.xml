<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="RESULTS"
            android:textColor="@color/text"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/results"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/nitrogen"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/text"
                android:hint="Nitrogen"
                android:paddingStart="10dp"
                android:text="3.5 - 4 %"
                android:textColor="@color/text"
                android:textColorHint="@color/text"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/potassium"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/text"
                android:hint="Potassium"
                android:paddingStart="10dp"
                android:text="3+%"
                android:textColor="@color/text"
                android:textColorHint="@color/text"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/phosphorus"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/text"
                android:hint="Phosphorus"
                android:paddingStart="10dp"
                android:text="0.8 - 1 %"
                android:textColor="@color/text"
                android:textColorHint="@color/text"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/moisture"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/text"
                android:hint="Moisture"
                android:paddingStart="10dp"
                android:text="50 - 70 %"
                android:textColor="@color/text"
                android:textColorHint="@color/text"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ph"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/text"
                android:hint="pH"
                android:paddingStart="10dp"
                android:text="6.2 - 6.5"
                android:textColor="@color/text"
                android:textColorHint="@color/text"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/recommendedCrop"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/text"
                android:hint="Recommended Crop"
                android:paddingStart="10dp"
                android:text="Tomato is recommended crop"
                android:textColor="@color/text"
                android:textColorHint="@color/text"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/reScan"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/round_button"
                android:text="Re-Scan"
                android:textColor="@color/button"
                android:textStyle="bold" />

            <Button
                android:id="@+id/exit"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/round_button"
                android:text="exit"
                android:textColor="@color/button"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>
</ScrollView>